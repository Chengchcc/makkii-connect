{
  "compilerOptions": {
    "module": "commonjs",
    // "allowJs": true,
    "declaration": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "removeComments": true,
    "esModuleInterop": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "target": "es6"
  },
  "exclude": [
    "packages/**/__tests__/*",
    "**/*.spec.ts",
    "node_modules",
    "example"
  ]
}